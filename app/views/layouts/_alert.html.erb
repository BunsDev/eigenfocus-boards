<div class="flex items-stretch text-sm justify-between border rounded relative mb-4 text-<%= type %> border-<%= type %>"
  data-controller="alert-message">
  <div class="bg-<%= type %> p-3 text-white flex items-center">
    <% if type.to_sym == :notice || type.to_sym == :success %>
      <i class="fa-solid fa-check"></i>
    <% else %>
      <i class="fa-solid fa-warning"></i>
    <% end %>
  </div>
  <div class="px-4 grow bg-white py-3 sm:px-5 flex items-center">
    <span><%= message %></span>
  </div>
  <div class="bg-white flex items-center pr-2">
    <button data-action="click->alert-message#closeMessage" 
      class="rounded-full p-0 w-7 h-7 text-md font-medium text-<%= type %> hover:bg-<%= type %> focus:bg-<%= type %> active:bg-<%= type %> hover:bg-opacity-20 active:bg-opacity-20 focus:bg-opacity-20">
      <i class="fa-solid fa-close"></i>
    </button>
  </div>
</div>
