<%= turbo_frame_tag 'issue_card_display' do %>
  <%= render_modal do %>
    <div class="flex flex-col">
      <header class="flex flex-row gap-2 items-center pb-2 mb-4">
        <div class="flex h-8 w-8 items-center justify-center p-1 text-primary-500 ">
          <%= icon_for(:issues) %>
        </div>
        <h4 class="text-lg font-medium text-readable-content-700">
          <%= issue.title %>
        </h4>
      </header>

      <section class="flex flex-row gap-2 grow cpy-issue-description">
        <div class="flex h-8 w-8 items-center justify-center p-1 text-primary-500 ">
          <i class="fa-solid fa-align-justify"></i>
        </div>
        <div class="flex flex-col gap-2 grow">
          <h5 class="text-md font-medium text-readable-content-500 border-b grow"><%= Issue.human_attribute_name(:description) %></h5>

          <% if issue.description.present? %>
            <div><%= issue.description %></div>
          <% end %>
        </div>
      </section>
    </div>
  <% end %>
<% end %>
