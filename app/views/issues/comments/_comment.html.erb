<%= turbo_frame_tag dom_id(comment) do %>
  <div class="bg-background-50 rounded-lg p-4">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <p class="text-sm text-readable-content-700"><%= comment.content %></p>
      </div>
      <div class="flex items-center space-x-2">
        <%= link_to edit_issue_comment_path(comment.issue, comment),
          class: "link-primary text-sm" do %>
          <%= t("actions.edit") %>
        <% end %>

        <%= link_to issue_comment_path(comment.issue, comment),
          data: {
            turbo_confirm: t("confirmations.delete_comment"),
            turbo_method: :delete
          },
          class: "link-primary text-sm" do %>
          <%= t("actions.remove") %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>