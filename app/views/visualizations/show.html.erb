<div class="flex flex-col h-full">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-6 capy-header-wrapper">
    <h2 class="text-readable-content-800 font-semibold text-3xl text-body-800">
      <%= Visualization.model_name.human(count: 1) %>
    </h2>
    <%= link_to "#{t('actions.create')} #{Grouping.model_name.human.downcase}", new_visualization_grouping_path(@visualization), class: "btn-primary btn-xl", data: { turbo_frame: 'grouping_form' } %>
  </div>

  <%= turbo_frame_tag('grouping_form') {} %>
  <%= turbo_frame_tag('issue_form') {} %>

  <div class="relative grow">
    <ul
        class="absolute top-0 -left-4 -right-4 -bottom-4 sm:-left-12 sm:-right-12 sm:-bottom-12 flex flex-row flex-nowrap gap-x-8 px-4 sm:px-12 items-start overflow-x-auto overflow-y-hidden scroll-smooth"
        data-controller="sortable"
        data-sortable-target="container"
        data-sortable-move-path-value="<%= move_visualization_groupings_path(@visualization) %>"
        >
      <%= render partial: 'visualizations/column', collection: @visualization.groupings, as: :grouping %>

      <div class="order-last basis-60 shrink-0 p-2 border bg-body-contrast border-background-100 rounded-md shadow-xs" id="grouping_archor">
        <%= link_to new_visualization_grouping_path(@visualization), class: "shrink-0 ml-2 flex flex-col max-h-full text-readable-content-500 hover:text-readable-content-700", data: { turbo_frame: 'grouping_form' } do %>
          <div class="flex items-center justify-between mb-4">
            <h2 class="grow font-semibold truncate">
              <%= "#{t('actions.create')} #{Grouping.model_name.human.downcase}" %>
            </h2>
          </div>
        <% end %>
      </div>

    </ul>
  </div>

</div>
