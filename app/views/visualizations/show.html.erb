<div class="flex flex-col h-full">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-6 capy-header-wrapper">
    <h2 class="font-semibold text-3xl text-body-800">
      <%= Visualization.model_name.human(count: 1) %>
    </h2>
    <%= link_to "#{t('actions.create')} #{Grouping.model_name.human.downcase}", new_visualization_grouping_path(@visualization), class: "btn-primary btn-xl", data: { turbo_frame: 'grouping_form' } %>
  </div>

  <%= turbo_frame_tag('grouping_form') {} %>


  <div class="relative grow">
    <div class="absolute top-0 -left-4 -right-4 -bottom-4 sm:-left-12 sm:-right-12 sm:-bottom-12 flex flex-row flex-nowrap gap-x-8 px-4 sm:px-12 items-stretch overflow-x-auto overflow-y-hidden scroll-smooth">
      <%= render partial: 'visualizations/column', collection: @visualization.groupings, as: :grouping %>

      <%= turbo_frame_tag('grouping_archor') {} %>

      <div class="order-last h-full basis-60 shrink-0">
        <header class="flex flex-col max-h-full">
          <div class="flex items-center justify-between mb-4">
            <h2 class="grow font-semibold text-gray-800 dark:text-gray-100 truncate">
              Add new list
            </h2>
            <%= link_to new_visualization_grouping_path(@visualization), class: "shrink-0 ml-2", data: { turbo_frame: 'grouping_form' } do %>
              <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16">
                <path d="M15 7H9V1c0-.6-.4-1-1-1S7 .4 7 1v6H1c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1V9h6c.6 0 1-.4 1-1s-.4-1-1-1z" />
              </svg>
            <% end %>
          </div>
        </header>
      </div>

    </div>
  </div>

</div>
