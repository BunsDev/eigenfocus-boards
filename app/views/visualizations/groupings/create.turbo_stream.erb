<% if @grouping.persisted? %>
  <%= turbo_stream.append 'kanban-board', partial: "visualizations/column", locals: {
    visualization: current_visualization,
    grouping: @grouping,
    recently_created: true
  } %>
  <%= turbo_stream.update 'grouping_form', "" %>
  <%= new_turbo_stream_alert_message(:success, t_flash_message(@grouping)) %>
<% else %>
  <%= new_turbo_stream_alert_message(:error, @grouping.errors.full_messages.to_sentence) %>
<% end %>
