<% if @issue.persisted? %>
  <%= turbo_stream.replace dom_id(@issue), partial: "visualizations/card", locals: { visualization: current_visualization, issue: @issue } %>
  <%= new_turbo_stream_alert_message(:success, t_flash_message(@issue)) %>
<% else %>
  <%= new_turbo_stream_alert_message(:error, @issue.errors.full_messages.to_sentence) %>
<% end %>
